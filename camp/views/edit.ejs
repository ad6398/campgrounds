<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= camp.name %> </h1>
        <div style="width:30%;margin:0 auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" >
             <div class="form-group">
                <input class="form-control" type="text" name="camp[name]"  placeholder="name" value=<%= camp.name %> >
             </div>   
             <div class="form-group">    
                <input class="form-control" type="text" name="camp[image]" placeholder="image url"  value=<%= camp.image %> >
             </div>
             <div class="form-group">
                <input class="form-control" type="text" name="camp[description]" placeholder="description" value=<%= camp.description %> >
             </div>
             <div class="form-group">
               <button class="btn btn-primary btn-lg btn-block">submit</button>
             </div>
        </form>
        </div>
    </div>
  </div>


<% include ../partials/footer %>
