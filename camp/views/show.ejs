<% include ../partials/header %>

<div class="container">
      <div class="row">
            <div class="col-md-3">
                <p class="lead">yelpcamp</p>
                <div class="list-group">
                      <li class="list-group-item active">info 1</li>
                      <li class="list-group-item">info 2</li>
                      <li class="list-group-item">info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                  <div class="thumbnail">
                              <img class="img-responsive" src=" <%= camp.image %> " >
                              <h1><a><%= camp.name %></a></h1>
                              <p> <%= camp.description %> </p>
                              <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit post</a>
                              <form  action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete post</button>
                              </form>
                  </div>
                  <div class="well">
                      <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments" >Leave a comment</a>
                      </div>
                      <hr>
                      <div  class="row">
                      <div class="col-md-12">
                              <% for(var i=0; i < camp.comment.length ; i++){ %>
                                    <strong> <%= camp.comment[i].author %> </strong>  
                                    <p><%= camp.comment[i].title %> </p>    
                                    <a class="btn btn-warning btn-sm" href="/campgrounds/<%= camp._id %>/comments/<%= camp.comment[i]._id %>/edit"  >edit comment</a> 
                                    <form action="/campgrounds/<%= camp._id %>/comments/<%= camp.comment[i]._id %>?_method=DELETE" method="POST">
                                          <button class="btn btn-danger btn-sm">delete the comment</button>
                                    </form>   
                              <% } %>                              
                      </div>
                      </div>
                  </div>
            </div>
      </div>
</div>

<% include ../partials/footer %>